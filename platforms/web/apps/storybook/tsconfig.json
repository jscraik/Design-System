{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["@storybook/react-vite"],
    "baseUrl": ".",
    "paths": {
      "@design-studio/ui": ["../../../../packages/ui/src"],
      "@design-studio/ui/*": ["../../../../packages/ui/src/*"],
      "@design-studio/runtime": ["../../../../packages/runtime/src"],
      "@design-studio/runtime/*": ["../../../../packages/runtime/src/*"]
    }
  },
  "include": ["../**/*.ts", "../**/*.tsx", ".storybook/**/*", "../../../../packages/ui/src/**/*"],
  "exclude": ["node_modules"]
}
